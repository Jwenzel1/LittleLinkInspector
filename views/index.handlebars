<div class="container text-center">
  <div class="row">
    <div class="col-md-12 ">
      <img src="http://www.tellusaboutus.com/comments/images/BK-WebComment/BB_WHOPPER-v1.png" alt="A pic of a tasty burger!">
      <h1>EAT DA BURGER</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Menu</h2>
      {{#each this.notDevoured}}
        <form class="burgerForm" action="/{{this.id}}?_method=PUT" method="post">
          {{this.burger_name}}
          <button type="submit">EAT</button>
        </form>
        <hr>
      {{/each}}
    </div>
    <div class="col-md-6">
      <h2>Burger Graveyard :(</h2>
      {{#each this.devoured}}
        {{this.burger_name}}
        <br>
      {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form class="input" action="/" method="post">
        <textarea name="burgerText" rows="4" cols="40"></textarea>
        <button id="submit" type="submit" class="btn btn-primary center-block">Submit</button>
      </form>
      <p><strong>Press the submit button to add a burger to the list!</strong></p>
    </div>
  </div>
</div>
